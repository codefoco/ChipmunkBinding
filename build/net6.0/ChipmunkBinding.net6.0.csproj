<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\targets\BuildChipmunk.Common.props" />
  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>ChipmunkBinding</RootNamespace>
    <AssemblyName>ChipmunkBinding</AssemblyName>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <Configurations>Release;Debug</Configurations>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>..\..\lib\Release\net6.0\ChipmunkBinding.xml</DocumentationFile>
    <Optimize>true</Optimize>
    <DebugType>portable</DebugType>
    <OutputPath>..\..\lib\Release</OutputPath>
    <DefineConstants>TRACE;RELEASE;</DefineConstants>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>..\..\lib\Debug</OutputPath>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
    <DocumentationFile>..\..\lib\Debug\net6.0\ChipmunkBinding.xml</DocumentationFile>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.CodeStyle" Version="4.0.1">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="RefactoringEssentials" Version="5.6.0">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>
  <ItemGroup>
    <None Remove="Microsoft.CodeAnalysis.CSharp.CodeStyle" />
    <None Remove="Microsoft.Net.Compilers" />
    <None Remove="RefactoringEssentials" />
  </ItemGroup>
  <Import Project="..\..\src\ChipmunkBinding.Shared.projitems" Label="Shared" Condition="Exists('..\..\src\ChipmunkBinding.Shared.projitems')" />
  <Import Project="..\targets\BuildChipmunk.Windows.targets" />
  <Import Project="..\targets\BuildChipmunk.OSX.targets" />
  <Import Project="..\targets\BuildChipmunk.Linux.targets" />
  <Import Project="..\targets\ChipmunkBinding.Sign.targets" />
</Project>
